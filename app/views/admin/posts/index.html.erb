<h1>Posts</h1>
<table cellspacing="0" class="listing">
  <thead>
    <tr>
      <th id="title" scope="col">Title</th>
      <th id="updated" scope="col" class="medium">Last Updated</th>
      <th id="created" scope="col" class="medium">Created</th>
      <th>&nbsp;</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
<% if @posts %>
  <% @posts.each do |post| %>
  <tr class="">
    <td>
      <strong class="title"><a href="<%= edit_admin_post_path(post.permalink) %>"><%= post.title %></a></strong>
    </td>
     <td><%= l post.updated_at, :format => :verbose %></td>
    <td><%= l post.created_at.to_date, :format => :long %></td>
    <td><%= link_to "edit", edit_admin_post_path(post.permalink) %></td>
    <td><%= button_to "delete", admin_post_path(post.id), :method => :delete
     %></td>
  </tr>
   <% end %>
  
  <% end %>
</tbody>
</table>
      
