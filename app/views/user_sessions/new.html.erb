<%
  @page ||= {:title => 'Login' }
%>

<h1>Login</h1>

<div class="box">
  <% form_for @user_session, :url => user_session_path do |f| %>
    <%= f.error_messages :header_message => nil, :message => nil %>
    <div class="frow">
      <%= f.label :login %>
      <%= f.text_field :login, :class => 'txt' %>
    </div>
    <div class="frow">
      <%= f.label :password %>
      <%= f.password_field :password, :class => 'txt' %>
    </div>
  
    <div id="remember_me" class="frow">
       <%= f.check_box :remember_me %><%= f.label :remember_me %>
    </div>

    <div class="btns clearfix"><%= f.submit "Login"%></div>
  <% end %>
</div>